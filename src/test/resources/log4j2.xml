<Configuration packages="org.secureauth.sarestapi">
	<Appenders>
		<!-- Appenders -->
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<logger name="org.secureauth.sarestapi" level="all" additivity="false">
			<AppenderRef ref="console" />
		</logger>

		<!-- Root Logger -->
		<Root level="debug">
			<AppenderRef ref="console" />
		</Root>
	</Loggers>
</Configuration>
